{
  "version": "1.8.10",
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.ts",
    "!node_modules/**"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/DependencyNode.ts",
    "src/index.ts",
    "typings/index.d.ts",
    "typings/modules/semver/index.d.ts"
  ]
}
